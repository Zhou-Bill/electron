{
  "name": "gm-electron-mes",
  "version": "1.0.0",
  "description": "智能工位屏软件",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder --win"
  },
  "author": "深圳市观麦网络科技有限公司",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "serialport": "^9.0.1"
  },
  "build": {
    "appId": "cn.guanmai.x.mes",
    "productName": "智能工位屏",
    "copyright": "Copyright © 2020 gm",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "icon/icon.png"
    }
  }
}
